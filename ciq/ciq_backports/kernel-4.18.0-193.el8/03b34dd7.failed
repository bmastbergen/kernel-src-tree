diff --git a/sound/soc/soc-core.c b/sound/soc/soc-core.c
index 279fcb0cb18d..fad456743b48 100644
--- a/sound/soc/soc-core.c
+++ b/sound/soc/soc-core.c
@@ -965,8 +965,7 @@ static void soc_remove_component(struct snd_soc_component *component)
 	if (!component->card)
 		return;
 
-	if (component->driver->remove)
