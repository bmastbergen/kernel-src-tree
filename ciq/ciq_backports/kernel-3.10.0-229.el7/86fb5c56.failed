+ static void bt_update_count(struct blk_mq_bitmap_tags *bt,
+ 			    unsigned int depth)
+ {
+ 	unsigned int tags_per_word = 1U << bt->bits_per_word;
+ 	unsigned int map_depth = depth;
+ 
+ 	if (depth) {
+ 		int i;
+ 
+ 		for (i = 0; i < bt->map_nr; i++) {
