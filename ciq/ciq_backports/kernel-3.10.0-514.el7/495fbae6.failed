+ static int update_hw_stats(struct ib_device *dev, struct rdma_hw_stats *stats,
+ 			   u8 port_num, int index)
+ {
+ 	int ret;
+ 
+ 	if (time_is_after_eq_jiffies(stats->timestamp + stats->lifespan))
+ 		return 0;
+ 	ret = dev->get_hw_stats(dev, stats, port_num, index);
