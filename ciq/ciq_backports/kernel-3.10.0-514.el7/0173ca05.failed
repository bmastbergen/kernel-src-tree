+ 		break;
+ 	case 12:
+ 		devname = kasprintf(GFP_KERNEL, "/dev/disk/by-id/wwn-0x%12phN",
+ 				v->scsi.designator);
+ 		break;
+ 	case 16:
+ 		devname = kasprintf(GFP_KERNEL, "/dev/disk/by-id/wwn-0x%16phN",
+ 				v->scsi.designator);
+ 		break;
+ 	default:
+ 		return -EINVAL;
+ 	}
+ 
