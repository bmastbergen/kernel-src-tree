+ 	}
+ 
+ 	pr_debug("offs = %lld, *off = %lld, count = %d\n", offs, *off, count);
+ 
+ 	*off = offs + count;
+ 
+  out_free:
+ 	kfree(buf);
+ 	return count;
+ }
