+ 	if (!sysfs_get_active(of->sd)) {
+ 		count = -ENODEV;
+ 		mutex_unlock(&of->mutex);
+ 		goto out_free;
+ 	}
+ 
+ 	if (battr->read)
+ 		count = battr->read(file, kobj, battr, buf, offs, count);
+ 	else
+ 		count = -EIO;
+ 
+ 	sysfs_put_active(of->sd);
+ 	mutex_unlock(&of->mutex);
+ 
+ 	if (count < 0)
+ 		goto out_free;
+ 
+ 	if (copy_to_user(userbuf, buf, count)) {
+ 		count = -EFAULT;
