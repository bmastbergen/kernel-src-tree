+ 	}
+ 
+ 	netif_set_real_num_tx_queues(info->netdev, *num_queues);
+ 
+ 	rtnl_unlock();
+ 
+ 	if (*num_queues == 0) {
+ 		dev_err(&info->netdev->dev, "no queues\n");
