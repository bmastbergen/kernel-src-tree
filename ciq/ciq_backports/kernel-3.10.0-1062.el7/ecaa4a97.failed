+ 		nd_cmd->status = ND_INTEL_STATUS_INVALID_STATE;
+ 		dev_dbg(dev, "freeze lock: wrong security state\n");
+ 	} else {
+ 		sec->state |= ND_INTEL_SEC_STATE_FROZEN;
+ 		nd_cmd->status = 0;
+ 		dev_dbg(dev, "security frozen\n");
+ 	}
+ 
+ 	return 0;
+ }
