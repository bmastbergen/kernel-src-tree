+ 		nd_cmd->status = ND_INTEL_STATUS_INVALID_PASS;
+ 		dev_dbg(dev, "unlock unit: invalid passphrase\n");
+ 	} else {
+ 		nd_cmd->status = 0;
+ 		sec->state = ND_INTEL_SEC_STATE_ENABLED;
+ 		dev_dbg(dev, "Unit unlocked\n");
