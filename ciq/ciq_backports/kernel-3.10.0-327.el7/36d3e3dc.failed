+ 	nfs_init_timeout_values(&ds_timeout, ds_proto, ds_timeo, ds_retrans);
+ 	clp = nfs_get_client(&cl_init, &ds_timeout, mds_clp->cl_ipaddr,
+ 			     au_flavor);
+ 
+ 	return clp;
+ }
