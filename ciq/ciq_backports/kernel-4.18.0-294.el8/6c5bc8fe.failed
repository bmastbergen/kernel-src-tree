--- a/net/ethtool/ioctl.c
+++ b/net/ethtool/ioctl.c
@@ -1641,6 +1641,7 @@ static int ethtool_get_eee(struct net_device *dev, char __user *useraddr)
 static int ethtool_set_eee(struct net_device *dev, char __user *useraddr)
 {
 	struct ethtool_eee edata;
+	int ret;
 
 	if (!dev->ethtool_ops->set_eee)
 		return -EOPNOTSUPP;
@@ -1648,7 +1649,10 @@ static int ethtool_set_eee(struct net_device *dev, char __user *useraddr)
